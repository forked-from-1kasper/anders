module induction where

def indᵂ-β (A : U) (B : A → U) (C : (W (x : A), B x) → U)
  (g : Π (x : A) (f : B x → (W (x : A), B x)),
      (Π (b : B x), C (f b)) → C (sup A B x f))
  (a : A) (f : B a → (W (x : A), B x)) :=
g a f (λ (b : B a), indᵂ A B C g (f b))

def indᵂ-β′ (A : U) (B : A → U) (C : (W (x : A), B x) → U)
  (g : Π (x : A) (f : B x → (W (x : A), B x)),
      (Π (b : B x), C (f b)) → C (sup A B x f))
  (a : A) (f : B a → (W (x : A), B x)) :=
indᵂ A B C g (sup A B a f)